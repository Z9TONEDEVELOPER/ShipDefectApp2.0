<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="MauiApp1.DataEntryView"
             >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Левая панель -->
        <ScrollView Grid.Row="1" Grid.Column="0">
            <VerticalStackLayout Spacing="5" Padding="10">
                <toolkit:Expander>
                    <toolkit:Expander.Header>
                        <Button Text="Основная информация" Clicked="OpenMainInfo_Clicked"/>
                    </toolkit:Expander.Header>
                    <VerticalStackLayout Padding="10" Spacing="5">
                        <Button Text="Таблица 3.5.3" FontSize="13" HorizontalOptions="Start" Clicked="OpenTable_Clicked"/>
                        <Button Text="Таблица 2.4.1" FontSize="13" HorizontalOptions="Start" Clicked="OpenTable_Clicked"/>
                        <Button Text="Таблица 1.5.5" FontSize="13" HorizontalOptions="Start" Clicked="OpenTable_Clicked"/>
                    </VerticalStackLayout>
                </toolkit:Expander>

                <toolkit:Expander>
                    <toolkit:Expander.Header>
                        <Button Text="Формы" Clicked="OpenForms_Clicked"/>
                    </toolkit:Expander.Header>
                </toolkit:Expander>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Правая панель -->
        <ContentView x:Name="RightContent"
                     Grid.Row="1"
                     Grid.Column="1"
                     BackgroundColor="#ECECEC"/>
    </Grid>
</ContentView>