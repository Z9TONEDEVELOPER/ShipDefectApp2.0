<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="MauiApp1.MainPage">

    <Grid RowDefinitions="Auto,*">
        <!-- Верхняя панель -->
        <HorizontalStackLayout Grid.Row="0"
                               BackgroundColor="#FF001D5A"
                               Padding="10"
                               Spacing="10"
                               VerticalOptions="Center">
            <Button Text="Создать" WidthRequest="120"/>
            <Button Text="Открыть" WidthRequest="120"/>
            <Button Text="Сохранить" WidthRequest="120"/>
            <Button Text="Ввод данных"
                    WidthRequest="140"
                    HorizontalOptions="Center"
                    Clicked="OpenDataEntry_Clicked"/>
            <Button Text="Создание отчёта"
                    WidthRequest="160"
                    HorizontalOptions="Center"
                    Clicked="OpenReport_Clicked"/>
        </HorizontalStackLayout>

        <!-- Рабочая область -->
        <ContentView x:Name="MainContent"
                     Grid.Row="1"
                     BackgroundColor="#F2F2F2"/>
    </Grid>
    

</ContentPage>